# Appearence
set status_format       = <span font="Snap 10"><span background="#6699CC" foreground="#000000">MODE</span> <span foreground="#6699CC">KEYCMD</span> <span foreground="#6699CC"> LOAD_PROGRESSBAR </span><span foreground="#6699CC">URI</span></span>
set status_background   = #3d3d3d
set status_top          = 0
set status_pbar_done    = =
set status_pbar_pending = -
set status_pbar_width   = 8

#set title_format_short = TITLE + SELECTED_URI - uzbl
#set title_format_long = KEYCMD MODE TITLE - uzbl

# Behaviour
set show_status        = 0
set always_insert_mode = 0
set modkey             = Mod1
set shell_cmd          = zsh -c
set reset_command_mode = 1

# Webkit
set autoload_images       = 1
set autoshrink_images     = 1
set minimum_font_size     = 6
set font_size             = 12
set monospace_size        = 12
set default_encoding      = utf-8
set enforce_96_dpi        = 0
set disable_plugins       = 0
set disable_scripts       = 0
set enable_spellchecker   = 1
set enable_private        = 0
set resizeable_text_areas = 1
set print_background      = 0
set useragent             = Uzbl [ Webkit WEBKIT_MAJOR.WEBKIT_MINOR.WEBKIT_MICRO ]
set uri                   = file:///home/unexist/.config/uzbl/home.html
set stylesheet_uri        = file:///home/unexist/.config/uzbl/style.css

# Interface
set fifo_dir   = /tmp
set socket_dir = /tmp

# Network
set proxy_url  = http://127.0.0.1:8118

# Handler
set cookie_handler = talk_to_socket $XDG_CACHE_HOME/uzbl/cookie_daemon_socket
set download_handler = spawn $HOME/bin/download.rb

# Browser Control
bind b  = back
bind i  = toggle_insert_mode
bind m  = forward
bind S  = stop
bind r  = reload
bind R  = reload_ign_cache
bind T  = toggle_status
bind ZZ = exit

# Scrolling
bind gg = scroll_begin
bind G  = scroll_end
bind h  = scroll_horz -200
bind j  = scroll_vert 200
bind J  = scroll_vert 95%
bind k  = scroll_vert -200
bind K  = scroll_vert -95%
bind l  = scroll_horz 200

# Searching
bind /_ = search %s
bind ?_ = search_reverse %s
bind n  = search
bind N  = search_reverse

# Miscellaneous
bind +  = zoom_in
bind -  = zoom_out
bind ;_ = runcmd %s

# Spawn
bind :o_ = spawn uzbl -u %s
bind :d_ = spawn uzbl -u http://www.dict.cc/?s=%s
bind :g_ = spawn uzbl -u http://www.google.com/search?q=%s

# Uri
bind a  = uri http://wiki.archlinux.org/index.php/Special:Search?search=%s&go=Go
bind B  = uri http://delicious.com/tags/unixist
bind d_ = uri http://www.dict.cc/?s=%s
bind D_ = uri http://de.wikipedia.org/wiki/Special:Search?search=%s
bind e  = uri http://www.eqqon.com/index.php/Ruby_C_Extension
bind E_ = uri http://en.wikipedia.org/wiki/Special:Search?search=%s
bind g_ = uri http://www.google.com/search?q=%s
bind I_ = uri http://www.imdb.com/find?s=all&q=%s
bind o_ = uri %s
bind M  = uri http://mail.zoho.com
bind q  = uri http://www.zenspider.com/Languages/Ruby/QuickRef.html
bind r_ = uri http://apidock.com/rails/search?query=%s&commit=Search
bind R_ = uri http://apidock.com/ruby/search?query=%s&commit=Search
bind s  = uri http://www.sparkasse-duisburg.de
bind u  = uri http://unexist.scrapping.cc/
bind U  = uri http://www.uzbl.org
bind x  = uri http://tronche.com/gui/x/xlib/function-index.html

# Shell
bind y  = sh "echo -n $6 | xclip"
bind Y  = sh "echo -n \"$7 ($6)\" | xclip"
